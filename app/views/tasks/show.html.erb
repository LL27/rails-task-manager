<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= link_to "Edit task", edit_task_path(@task) %></p>
  <div class="card">

    <div class="card-body"><%= @task.details %></div>

  </div>
  <% if @task.completed %>
      <p><i class="far fa-check-square"></i>  This task is completed</p>
    <% else %>
      <p><i class="far fa-square"></i>This task is not completed yest</p>
    <% end %>

  <%= link_to "Back to list", tasks_path %>
</div>
